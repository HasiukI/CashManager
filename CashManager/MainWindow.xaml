<Window x:Class="CashManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CashManager.ViewModel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        >

    <Window.DataContext>
        <local:CategoryViewModel/>
    </Window.DataContext>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="25*"/>
            <RowDefinition Height="48*"/>
            <RowDefinition Height="362*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="1" Margin="0,47,0,0" Grid.RowSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid>
                    <StackPanel>
                        <TextBlock Text="{Binding CurentCategory.Name, Mode=OneWay}"/>
                        <TextBlock Text="{Binding CurentCategory.Price, Mode=OneWay}"/>
                    </StackPanel>
                </Grid>
                <!--Category-->
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    
                    
                    <ListBox ItemsSource="{Binding Categories}" SelectedItem="{Binding CurentCategory}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Button Command="">
                                    <TextBlock Text="{Binding Name}"/>
                                </Button>
                               
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <StackPanel  Grid.Column="1">
                        <Label>name</Label>
                        <TextBox Text="{Binding NameCategory, Mode=TwoWay}"></TextBox>
                        <Label>name</Label>
                        <TextBox Text="{Binding PriceCategory,Mode=TwoWay}"></TextBox>
                        <Label>isCosts</Label>
                        <CheckBox IsChecked="{Binding IsCosts, Mode=TwoWay}"></CheckBox>
                        <Button Command="{Binding CreateNewCategory}">add</Button>
                    </StackPanel>

                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Window>
